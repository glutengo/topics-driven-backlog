{
  "name": "topics-driven-backlog",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "docker-compose up",
    "logs": "docker-compose logs",
    "stop": "docker-compose down",
    "bash": "docker exec -ti tdb-dev bash",
    "db:migrate": "docker exec -ti tdb-dev bash -c \".docker/prepare-db.sh\"",
    "db:seed": "docker-compose run tdb rails db:seed",
    "bundle:update": "docker exec -ti tdb-dev bash -c \"bundle update\"",
    "bundle:install": "docker exec -ti tdb-dev bash -c \"bundle install\""
  },
  "dependencies": {
    "@rails/webpacker": "^3.0.2",
    "bootstrap": "4.0.0-beta.2",
    "bootstrap-vue": "^1.0.0",
    "coffeescript": "1.12.7",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "sortablejs": "^1.7.0",
    "vue": "^2.5.2",
    "vue-awesome": "^2.3.3",
    "vue-loader": "^13.3.0",
    "vue-resource": "^1.3.4",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.2",
    "vuelidate": "^0.6.1",
    "vuex": "^3.0.0"
  },
  "devDependencies": {
    "babel-jest": "^22.0.4",
    "babel-polyfill": "^6.26.0",
    "jest": "^22.0.4",
    "jest-vue-preprocessor": "^1.3.1",
    "vue-test-utils": "^1.0.0-beta.8",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  },
  "jest": {
    "collectCoverageFrom": ["frontend/**/*.js", "frontend/**/*.vue"],
    "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/config/"],
    "transformIgnorePatterns": [
      "node_modules/(?!(bootstrap-vue)/)"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  }
}
