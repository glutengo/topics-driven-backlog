{
    "extends": ["eslint:recommended", "plugin:vue/recommended"],
    "rules": {
        "import/no-unresolved": 0,
        "import/no-unassigned-import": 0,
        "no-console": "off",
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4],
        "vue/html-indent": ["error", 4],
        "quotes": ["error", "single"],
        "require-jsdoc": "error",
        "valid-jsdoc": ["error", {
            "requireReturn": false,
            "requireReturnDescription": false,
            "requireParamDescription": false,
            "prefer": {
              "return": "returns"
            },
            "preferType": {
              "String": "string",
              "Object": "object",
              "Function": "function",
              "Number": "int"
            }
        }],
        "semi": ["error", "always"],
        "no-extra-semi": "error",
        "object-curly-spacing": ["error", "always"]
    },
    "env": {
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    }
}
